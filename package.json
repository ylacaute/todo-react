{
  "name": "react-hello-world",
  "version": "1.0.0",
  "description": "Todo App build with React !",
  "config": {
    "dev": {
      "FRONT_PORT": "8080",
      "API_PORT": "8081"
    }
  },
  "scripts": {
    "build": "./node_modules/.bin/webpack -d",
    "build-prod": "./node_modules/.bin/webpack -p",

    "prestart": "npm run build",
    "start": "API_PORT=$npm_package_config_dev_API_PORT ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --port $npm_package_config_dev_FRONT_PORT --content-base assets --inline --hot",

    "start-api-default": "./node_modules/.bin/json-server server/db.json --routes server/routes.json",
    "start-api": "npm run start-api-default -- --port $npm_package_config_dev_API_PORT",

    "pretest": "npm run build",
    "test": "echo 'Error: TODO :)'"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "json-server": "^0.9.4",
    "knacss": "^6.0.7",
    "node-sass": "^4.3.0",
    "react-hot-loader": "^1.3.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.15.0"
  },
  "author": "Yannick Lacaute",
  "license": "GNU"
}
